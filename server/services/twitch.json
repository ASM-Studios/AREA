{
  "name": "twitch",
  "events": [
    {
      "short_name": "stream_started_twitch",
      "name": "Stream start",
      "description": "Detect stream start",
      "type": "action",
      "variables": ["user_login", "user_name", "game_name", "title", "started_at"],
      "parameters": [
        {
          "name": "streamer",
          "description": "Streamer which will trigger the action",
          "type": "string"
        }
      ]
    },



    {
      "short_name": "send_message_twitch",
      "name": "Send message",
      "description": "Send a message on a tchat",
      "type": "reaction",
      "parameters": [
        {
          "name": "destination",
          "description": "Tchat on which message will be send",
          "type": "string"
        },
        {
          "name": "content",
          "description": "Content of the message",
          "type": "string"
        }
      ]
    },
    {
      "short_name": "whisper_message_twitch",
      "name": "Whisper message",
      "description": "Whisper a message",
      "type": "reaction",
      "parameters": [
        {
          "name": "receiver",
          "description": "Receiver of the message",
          "type": "string"
        },
        {
          "name": "content",
          "description": "Content of the message",
          "type": "string"
        }
      ]
    }
  ]
}
